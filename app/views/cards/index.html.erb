<%= render "alert" %>
<div id="page-info">
    <%= page_entries_info @cards %>
</div>

<div id="filter-and-sort" class="dropdown">
    <a href="#" id="d-label1" class="dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        Filter &amp; Sort <span class="caret"></span>
    </a>
    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="d-label1">
        <form action="" method="get">
            <div id="filter-body">
                <!--
                <div class="field">
                    <label for="group">Group</label>
                    <select id="group" class="form-control" name="group">
                        <option value="val">val</option>
                    </select>
                </div>
                -->
                <div class="field">
                    <label for="tag">Tag</label>
                    <select id="tag" class="form-control" name="tags">
                        <option value=""></option>
                        <% @tags.each do |tag| %>
                            <option value="<%= tag.name %>"><%= tag.name %></option>
                        <% end %>
                    </select>
                </div>
                <div class="field">
                    <label for="status">Status</label>
                    <select id="status" class="form-control" name="status">
                        <option value=""></option>
                        <% Card::STATUSES.each do |id, status| %>
                            <option value="<%= id %>"><%= status %></option>
                        <% end %>
                    </select>
                </div>
                <!--
                <div class="field">
                    <label for="status">Sort</label>
                    <select id="status" class="form-control" name="status"><option value="val1"></option></select>
                </div>
                -->
            </div>
            <div id="filter-footer">
                <input type="submit" value="Filter" class="btn btn-primary">
            </div>
        </form>
    </div>
</div>

<div id="cards">
    <% @cards.each do |card| %>
        <div class="card">
            <div class="card-body">
                <div class="tags">
                    <ul class="list-inline">
                        <% card.tags.each do |tag| %>
                            <li><%= tag.name.truncate(13) %></li>
                        <% end %>
                    </ul>
                </div>
                <div class="head">
                    <%= simple_format(card.head) %>
                </div>
                <div class="tail">
                    <%= md(card.tail) %>
                </div>
            </div>
            <div class="card-footer">
                <ul class="list-inline">
                    <li><span class="glyphicon glyphicon-star"></span> <%= link_to 'Favirote', nil %></li>
                    <li><span class="glyphicon glyphicon-list-alt"></span> <%= link_to 'Detail', card_path(card.id) %></li>
                </ul>
            </div>
        </div>
    <% end %>
</div>
<div id="pagination">
    <%= paginate @cards, window: 5 %>
</div>
