<%= form_tag import_cards_path do %>
    <div class="confirm-message">
        <p>Import following <%= @new_cards.count %> cards. OK?</p>
    </div>

    <div id="import-cards" class="table-responsive">
        <table class="table table-bordered">
            <tr class="table-header">
                <th>front</th>
                <th>back</th>
                <th>memo</th>
                <th>status</th>
                <th>tags</th>
            </tr>
            <% @new_cards.each do |card| %>
                <tr>
                    <td>
                        <%= simple_format(card.front) %>
                        <%= hidden_field_tag nil, card.front, name: 'cards[][front]' %>
                    </td>
                    <td>
                        <%= simple_format(card.back) %>
                        <%= hidden_field_tag nil, card.back, name: 'cards[][back]' %>
                    </td>
                    <td>
                        <%= simple_format(card.memo) %>
                        <%= hidden_field_tag nil, card.memo, name: 'cards[][memo]' %>
                    </td>
                    <td>
                        <%= card.status %>
                        <%= hidden_field_tag nil, card.status, name: 'cards[][status]' %>
                    </td>
                    <td>
                        <%= card.tag_list %>
                        <%= hidden_field_tag nil, card.tag_list, name: 'cards[][tag_list]' %>
                    </td>
                </tr>
            <% end %>
        </table>
    </div>
    <%= submit_tag :import %>
<% end %>
